<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- ImageView hiển thị hình ảnh gốc -->
    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Nút chọn hình ảnh -->
    <Button
        android:id="@+id/btnSelectImage"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Chọn hình ảnh"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView" />

    <!-- Nút mã hóa -->
    <Button
        android:id="@+id/btnEncrypt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Mã hóa hình ảnh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnSelectImage" />

    <!-- Nút giải mã -->
    <Button
        android:id="@+id/btnDecrypt"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="Giải mã hình ảnh"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/btnEncrypt" />

    <!-- EditText để nhập nội dung mã hóa -->
    <EditText
        android:id="@+id/etInputEncodedData"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="Nhập nội dung mã hóa để giải mã"
        android:inputType="text"
        android:padding="8dp"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/btnDecrypt" />

    <!-- ImageView hiển thị hình ảnh sau giải mã -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="fitCenter"
        android:layout_marginTop="10dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/etInputEncodedData" />

</androidx.constraintlayout.widget.ConstraintLayout>
